= render "leftside"
.l-container
  .l-content
    %section.mypage-tab-container
      %h2.mypage-tab-head 出品した商品
      .mypage-tabs
        = link_to "売却済",root_path
      .tab-content
        - @items.each do |item|
          - if item.seller_id == current_user.id && item.buyer_id.present?
            -# 変更済
            = link_to item_path(item) do
              %p= item.name
              %p= image_tag item.images[0].src.url
      = paginate @items
= render "footer"