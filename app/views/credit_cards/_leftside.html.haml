%body
  %header.pcHeader
    .headerInner
      .mainHeader
        %h1.icon
          = link_to root_path do
            = image_tag src="/assets/logo.png"
        .searchBox
          %form{"accept-charset" => "UTF-8", action: "#", method: "get"}
            %input{name: "utf8", type: "hidden", value: "✓"}
            %input#searchInput.searchBox--input{name: "key", placeholder: "キーワードから探す"}/
            %button{type: "submit"}
              .searchBox__icon
                = image_tag src="/assets/icon-search 1.png"
      %ul.resultLists
      .nav
        %ul.listsLeft
          %li.listsLeft__item.listsLeft__item--first
            = link_to "カテゴリー",root_path,id:"catBtn" 
            .tree.displayNone
              %ul.categoryTree
                %li.categoryTree--item
                  = link_to "レディース",root_path,id:"1"
                %li.categoryTree--item
                  = link_to "メンズ",root_path,id:"2"
                %li.categoryTree--item
                  = link_to "ベビー・キッズ",root_path,id:"3"
                %li.categoryTree--item
                  = link_to "インテリア・住まい・小物",root_path,id:"4"
                %li.categoryTree--item
                  = link_to "本・音楽・ゲーム",root_path,id:"5"
                %li.categoryTree--item
                  = link_to "おもちゃ・ホビー・グッズ",root_path,id:"6"
                %li.categoryTree--item
                  = link_to "コスメ・香水・美容",root_path,id:"7"
                %li.categoryTree--item
                  = link_to "家電・スマホ・カメラ",root_path,id:"8"
                %li.categoryTree--item
                  = link_to "スポーツ・レジャー",root_path,id:"9"
                %li.categoryTree--item
                  = link_to "ハンドメイド",root_path,id:"10"
                %li.categoryTree--item
                  = link_to "チケット",root_path,id:"11"
                %li.categoryTree--item
                  = link_to "自動車・オートバイ",root_path,id:"12"
                %li.categoryTree--item
                  = link_to "その他",root_path,id:"13"
          %li.listsLeft__item
            = link_to "ブランド",root_path,id:"brandBtn"
            %ul.brandsPulldown.displayNone
        %ul.listsRight
          %li.listsRight__item.listsRight__item--login
            = link_to "ログアウト",root_path
          %li.listsRight__item.listsRight__item--new
            = link_to "新規会員登録",root_path
  
  .l-container
    .l-side
      %nav.mypage-nav
        %ul.mypage-nav-list
          %li.mypage-nav-list-item.active
            = link_to "マイページ",credit_card_path(current_user.id)
          %li.mypage-nav-list-item
            = link_to "出品する",new_item_path
          %li.mypage-nav-list-item
            = link_to "出品した商品-出品中",root_path
          %li.mypage-nav-list-item
            = link_to "出品した商品-取引中",root_path
          %li.mypage-nav-list-item
            = link_to "出品した商品-売却済",root_path
          %li.mypage-nav-list-item
            = link_to "購入した商品-取引中",confirms_path
          %li.mypage-nav-list-item
            = link_to "購入した商品-過去の取引",root_path
          %li.mypage-nav-list-item
            = link_to "売上.振り込み申請",root_path
        %h3.mypage-nav-head 設定
        %ul.mypage-nav-list
          %li.mypage-nav-list-item
            = link_to "プロフィール",root_path
          %li.mypage-nav-list-item
            = link_to "発送元・お届け先住所変更",root_path
          %li.mypage-nav-list-item
            = link_to "クレジットカード登録・削除",new_credit_card_path
          %li.mypage-nav-list-item
            = link_to "メール/パスワード",root_path
          %li.mypage-nav-list-item
            = link_to "本人情報",root_path
          %li.mypage-nav-list-item
            = link_to "電話番号の確認",root_path
          %li.mypage-nav-list-item
            = link_to "ログアウト",root_path
  
