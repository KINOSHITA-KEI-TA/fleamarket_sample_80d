
.confirm
  .confirm__top
    %span.image
    = link_to root_path do
      = image_tag src="logo.png", size: "200x60"

  .confirm__list
    .confirm__purchase
      購入内容の確認
    .confirm__item
      .confirm__item__name
        %p persons ワイシャツ ブラウス
        %span 送料込み（税込）
        %span ¥1,000
      .confirm__item__image
        %span.image
        = image_tag src="yshirt.jpg", size: "100x100"
    .confirm__pay
      .confirm__pay__amount
        支払い金額
      .confirm__pay__money
        ¥777
      .confirm__pay__point
    .confirm__method
      .confirm__method__how
        %h3 支払い方法
      .confirm__method__credit
        %p クレジットカード
        = "**** **** **** " + @credit_card.last4
        %p 有効期限
        - exp_month = @credit_card.exp_month.to_s
        - exp_year = @credit_card.exp_year.to_s.slice(2,3)
        = exp_month + " / " + exp_year
        
    .confirm__address{"data-test" => "transaction-buy-address-text"}
      .confirm__address__1
        %h3 配送先
        
      .confirm__address__2
        = @user.post_code
        %p= @user.prefecture.name
        = @user.city
        = @user.address_number
        = @user.building
        - first = @user.first_name
        - family = @user.family_name
        %p= first + family
    .confirm__buy
      = form_tag(confirm_pay_path(current_user.id), method: :post, id: 'pay-form', data: {confirm: 'よろしいですか？'}) do
        %input{ type: "hidden", name: "card_id", value: "" }
        %button 購入する
  .confirm__foot
    .confirm__foot__icon
      %span.image
        = image_tag src="logo-white.png", size: "120x70"
      .confirm__foot__furima    
        © Furima, Inc.
  